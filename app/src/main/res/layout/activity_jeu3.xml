                android:layout_weight="0.2"
                android:fontFamily="monospace"
                android:onClick="buttonclick"
                android:text="6"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:typeface="sans" />

            <androidx.appcompat.widget.AppCompatButton
