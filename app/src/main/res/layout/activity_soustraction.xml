<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="5dp"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    app:layout_marginBaseline="5dp"
    tools:context=".activity_soustraction">

    <TextView
        android:id="@+id/titre"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#1777A5"
        android:fontFamily="@font/gearsofpeace"
        android:gravity="center_horizontal"
        android:text="Soustraction"
        android:textColor="#04061E"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/explication_sous"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="hello Soustraction" />

        <ImageView
            android:id="@+id/soustr"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="-55dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            app:srcCompat="@drawable/sous" />

        <TextView
            android:id="@+id/emprunt"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-10dp"
            android:background="#160D98"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Emprunt"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emprunt_texte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:scaleX="0.60"
            android:scaleY="0.60"
            app:srcCompat="@drawable/calculs2" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>