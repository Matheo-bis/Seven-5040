<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="5dp"
    android:background="#00FFFFFF"
    android:backgroundTint="#00FFFFFF"
    app:layout_marginBaseline="5dp"
    tools:context=".activity_soustraction">

    <TextView
        android:id="@+id/titre"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#1777A5"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Soustraction"
        android:textColor="#04061E"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="375dp"
        android:layout_height="732dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        app:layout_constraintVertical_bias="0.88">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/explication_sous"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginTop="12dp"
                android:text="hello Soustraction" />

            <ImageView
                android:id="@+id/soustr"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/sous" />

            <TextView
                android:id="@+id/emprunt"
                android:layout_width="220dp"
                android:layout_height="65dp"
                android:background="#160D98"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Emprunt"
                android:textColor="#FBFBFB"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.60"
                android:scaleY="0.60"
                app:srcCompat="@drawable/calculs2" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>