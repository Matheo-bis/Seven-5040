<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".CoursActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fond2" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="499dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addition"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"

                android:onClick="goto_addition"
                android:text="addition"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soustraction"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"
                android:onClick="goto_soustraction"
                android:text="soustraction"

                android:textColor="@color/colorText"
                android:textSize="17sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplication"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="0.5"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"
                android:onClick="goto_multiplication"
                android:text="produit"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/division"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="0.5"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"
                android:onClick="goto_division"
                android:text="division"

                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00FFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/factorielle"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="0.5"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"
                android:onClick="goto_factorielle"
                android:text="factoriel"

                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/puissance"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="0.5"
                android:alpha="0.7"
                android:background="@drawable/button"
                android:fontFamily="@font/quantum"
                android:onClick="goto_puissance"
                android:text="puissance"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>